<%- include('../partials/header') %>

<h2>ENTER A NEW SNEAKER</h2>
<div class="new-sneaker" style="width: 18rem;">
<form id="new-form" action="/sneakers" method="POST" enctype="multipart/form-data">
  <label>NAME:
  <input type="text" name="name" required>
  </label><br>
  <label>BRAND:
    <select name="brand">
      <option value="Air Jordan">Air Jordan</option>
      <option value="Nike">Nike</option>
      <option value="Adidas">Adidas</option>
      <option value="Luxury">Luxury</option>
      <option value="Other">Other</option>
    </select>
  </label><br>
  <label>DATE ACQUIRED:
    <input type="datetime-local">
  </label><br>
  <label>SIZE:
      <input type="number" name="size">
      <input type="submit" value="ADD SNEAKER">
  </label>
</div>
<h2>ADD PHOTO</h2>
<div class="new-sneaker" style="width: 18rem;">
<img src="https://via.placeholder.com/333x333" alt="Sneaker">
<input type="file" name="avatar">
</div>
</form>

<%- include('../partials/footer') %>
