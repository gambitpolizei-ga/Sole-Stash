<%- include('../partials/header') %>

<body>
  <img
    id="title-image"
    src="/images/-solestash-logo.png"
    height="500px"
    width="500px"
  />
  <h2>MY COLLECTION</h2>
  <section id="collection"></section>
  <table class="collection-table">
    <thead>
      <tr>
        <th>NAME</th>
        <th>BRAND</th>
        <th>SIZE</th>
        <th>DATE ACQUIRED</th>
        <th>DETAILS</th>
      </tr>
    </thead>
    <tbody>
      <% sneakers.forEach(function(s) { %>
      <tr>
        <td><h3><%= s.name %></h3>
          <img src="<%= s.image.image.data %>" alt="Sneaker">
        </td>
        <td><%= s.brand %></td>
        <td><%= s.size %></td>
        <td><%= s.dateAcquired %></td>
        <td><a href="/sneakers/<%= s._id %>">DETAILS</a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>

<%- include('../partials/footer') %>
