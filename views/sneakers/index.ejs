<%- include('../partials/header') %>
<body>
  <img id='title-image' src="./public/images/sole-stash-logo.png" height='500px' width='500px'>
    <h2>Collection</h2>
    <section id="collection">
			<h2>My Collection</h2>
			<ul>
				<li>
					<img src="https://via.placeholder.com/150x150" alt="Sneaker">
					<h3>Nike Air Max 90</h3>
					<p>Size: 10</p>
					<p>Color: White/Black</p>
					<p>Year: 1990</p>
				</li>
				<li>
					<img src="https://via.placeholder.com/150x150" alt="Sneaker">
					<h3>Adidas Superstar</h3>
					<p>Size: 9.5</p>
					<p>Color: White/Green</p>
					<p>Year: 1983</p>
				</li>
			</ul>
		</section>
      <table id="list">
        <thead>
          <tr>
            <th>Name</th>
            <th>Release Date</th>
          </tr>
        </thead>
      <tbody>
          <% sneakers.forEach(function(s) { %>
          <tr>
            <td><%= s.title %></td>
            <td><%= s.releaseDate %></td>
            <td><a href="/sneakers/<%= s._id %>">DETAILS</a></td>
          </tr>
          <% }) %>
      </tbody>
    </table>
</body>

<%- include('../partials/footer') %>
